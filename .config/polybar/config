[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
yellow = #fba922
disconnected = #999


[bar/i3custombar]

; set singular polybar : main only
monitor=DP-0

monitor-strict = false
override-redirect = false
bottom = false
fixed-center = true

width = 100%
height = 23
offset-x = 0
offset-y = 0

radius = 10

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-bottom-size = 3
border-color = #222

padding-left = 0
padding-right = 2
; padding-bottom = 5

module-margin-left = 1
module-margin-right = 1

font-0 = DejaVu Sans Mono:style=Book:pixelsize=11
font-1 = Liberation Mono:style=Regular:pixelsize=11
font-2 = FreeMono:style=Regular:pixelsize=11
font-3 = Noto Color Emoji:style=Regular:scale=12
font-4 = Noto Emoji:style=Regular:scale=12


modules-left = i3  memory cpu cput gpu gput gpuram
modules-center = stocks
modules-right = pulseaudio filesystem  time date eth wlan

; tray-position = right
; tray-padding = 2
; tray-background = #0063ff

; wm-restack = i3

; override-redirect = false
; bottom = false

; scroll-up = i3wm-wsnext
; scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize



; CUSTOM TICKER TAPE
[module/stocks]
type = custom/script
exec = /home/neal/bin/scripts/stockcli watchlist

interval = 1
label = %output%


; WINDOW MANAGER
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.yellow}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2


; HARDWARE MONITORS

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu:"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.yellow}
label = %percentage:3%%
; format-background = #fff


[module/cput]
type = custom/script
exec = sensors | awk '/^Tdie/ {printf substr($0,16,6)}'
label = %output%
interval = 1
format-underline = ${colors.yellow}
; ${colors.yellow}


[module/gpu]
type = custom/script
exec = nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits
label = gpu:%output:3%%

interval = 1
format-underline = ${colors.yellow}


[module/gput]
type = custom/script
exec = nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader
label = %output%Â°C

interval = 1
format-underline = ${colors.yellow}


[module/gpuram]
type = custom/script
exec = nvidia-smi --query-gpu=utilization.memory --format=csv,noheader,nounits
label = vram:%output:3%%

interval = 1
format-underline = ${colors.yellow}


[module/memory]
type = internal/memory
interval = 2
format-prefix = "ram:"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.yellow}
label = %percentage_used:3%%


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
;label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_free%% (free)
label-mounted = %mountpoint%: %used% (%percentage_used%%)
label-mounted-underline = ${colors.yellow}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}


[module/wlan]
type = internal/network
interface = wlp6s0
interval = 0.1
format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.yellow}
udspeed-minwidth = 3
label-connected = "%downspeed% â¬‡ %upspeed% â¬†"
;%essid%
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname%
label-disconnected-foreground = ${colors.disconnected}
; U+258x : block elements
ramp-signal-0 = "â–"
ramp-signal-1 = "â–â–‚"
ramp-signal-2 = "â–â–‚â–ƒ"
ramp-signal-3 = "â–â–‚â–ƒâ–„"
ramp-signal-4 = "â–â–‚â–ƒâ–„â–…"
ramp-signal-foreground = ${colors.foreground}


[module/eth]
type = internal/network
interface = enp7s0
interval = 0.1
format-connected-underline = ${colors.yellow}
format-connected-prefix =
format-connected-prefix-foreground = ${colors.foreground-alt}
udspeed-minwidth = 3
label-connected = "%downspeed% â¬‡ %upspeed% â¬†"
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname%
label-disconnected-foreground = ${colors.disconnected}


; SYSTEM

[module/date]
type = internal/date
interval = 1
date = "%a %b %d %Y"
date-alt =
format-prefix = î€–
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #fba922
label = %date%


[module/time]
type = internal/date
inteval = 1

time = %H.%M.%S
time-alt = %H:%M

format-underline = #fba922
label = %time%


